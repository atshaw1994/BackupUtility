<Window x:Class="BackupUtility.ViewModels.BackupObjectForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackupUtility.ViewModels"
        mc:Ignorable="d"
        Title="Backup Object" SizeToContent="WidthAndHeight"
        Background="{DynamicResource Window.Background}">
    <StackPanel Margin="8">
        <Button x:Name="SourceButton" Content="Source..." Click="SourceButton_Click"/>
        <StackPanel Orientation="Horizontal" Margin="0,8">
            <Label Content="Destination Folder:" Foreground="{DynamicResource Window.Foreground}"/>
            <TextBox x:Name="DestinationTextBox" Width="150"/>
        </StackPanel>
        <Button Content="Save" Padding="8" HorizontalAlignment="Right" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
