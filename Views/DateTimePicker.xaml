<UserControl x:Class="BackupUtility.Views.DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BackupUtility.Views"
             xmlns:models="clr-namespace:BackupUtility.Models"
             mc:Ignorable="d" 
             Background="{DynamicResource Window.Background}"
             Foreground="{DynamicResource Window.Foreground}"
             HorizontalAlignment="Center" VerticalAlignment="Center"
             x:Name="ThisDateTimePickerControl">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4">
                <ToggleButton x:Name="SundayEnabled" 
                              d:IsChecked="True"
                              Tag="S" Style="{DynamicResource BackupSchedule.DayToggleButton}" 
                              IsChecked="{Binding SundayEnabled}"/>
                <ToggleButton x:Name="MondayEnabled" 
                              Tag="M" Style="{DynamicResource BackupSchedule.DayToggleButton}" 
                              IsChecked="{Binding MondayEnabled}"/>
                <ToggleButton x:Name="TuesdayEnabled" 
                              Tag="T" Style="{DynamicResource BackupSchedule.DayToggleButton}" 
                              IsChecked="{Binding TuesdayEnabled}"/>
                <ToggleButton x:Name="WednesdayEnabled" 
                              Tag="W" Style="{DynamicResource BackupSchedule.DayToggleButton}" 
                              IsChecked="{Binding WednesdayEnabled}"/>
                <ToggleButton x:Name="ThursdayEnabled" 
                              Tag="T" Style="{DynamicResource BackupSchedule.DayToggleButton}" 
                              IsChecked="{Binding ThursdayEnabled}"/>
                <ToggleButton x:Name="FridayEnabled" 
                              Tag="F" Style="{DynamicResource BackupSchedule.DayToggleButton}" 
                              IsChecked="{Binding FridayEnabled}"/>
                <ToggleButton x:Name="SaturdayEnabled" 
                              Tag="S" Style="{DynamicResource BackupSchedule.DayToggleButton}" 
                              IsChecked="{Binding SaturdayEnabled}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,4">
                <ComboBox ItemsSource="{Binding Hours}" SelectedItem="{Binding SelectedHour, Mode=TwoWay}"/>
                <TextBlock VerticalAlignment="Center" Margin="8,0,8,8" Text=":" FontSize="24" FontWeight="Bold"/>
                <ComboBox ItemsSource="{Binding Minutes}" SelectedItem="{Binding SelectedMinuteString, Mode=TwoWay}"/>
                <ComboBox ItemsSource="{Binding Meridiems}" SelectedItem="{Binding SelectedMeridiem, Mode=TwoWay}" Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
